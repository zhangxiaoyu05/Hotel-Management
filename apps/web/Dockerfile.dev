FROM node:18-alpine

# 安装必要的工具
RUN apk add --no-cache \
    git \
    curl

# 设置工作目录
WORKDIR /app

# 复制package文件
COPY package*.json ./

# 安装依赖
RUN npm ci

# 复制源码
COPY . .

# 开发模式启动脚本
RUN echo '#!/bin/sh\n\
set -e\n\
\n\
# 开发模式启动\n\
npm run dev\n\
' > /app/start-dev.sh && chmod +x /app/start-dev.sh

# 暴露端口
EXPOSE 3000

# 默认启动命令
CMD ["/app/start-dev.sh"]