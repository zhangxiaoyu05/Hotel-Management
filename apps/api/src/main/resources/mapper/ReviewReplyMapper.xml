<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hotel.repository.ReviewReplyRepository">

    <!-- 统计回复数量（带筛选条件） -->
    <select id="countRepliesByFilters" resultType="java.lang.Long">
        SELECT COUNT(*) FROM review_replies
        WHERE 1=1
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        <if test="adminId != null">
            AND admin_id = #{adminId}
        </if>
    </select>

    <!-- 分页查询回复（带筛选条件） -->
    <select id="findRepliesWithFilters" resultType="com.hotel.entity.ReviewReply">
        SELECT * FROM review_replies
        WHERE 1=1
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        <if test="adminId != null">
            AND admin_id = #{adminId}
        </if>
        <if test="startDate != null">
            AND created_at &gt;= #{startDate}
        </if>
        <if test="endDate != null">
            AND created_at &lt;= #{endDate}
        </if>
        ORDER BY created_at DESC
    </select>

</mapper>